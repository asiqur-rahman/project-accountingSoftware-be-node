<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Attendance Entry</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Attendance</a></li>
                    <li class="breadcrumb-item active">Entry</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form class="validate-this-form" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3 row">
                                <label for="detailsInfoId" class="col-md-2 col-form-label">Employee Name</label>
                                <div class="col-md-10">
                                    <div class="input-group" data-validate="Employee is required">
                                        <select class="form-select validate_this select2" name="employeeId" id="employeeId">
                                            <option value="" disabled selected>Select</option>
                                            <% if(locals.getEmployeeDD) {for(var i=0; i<getEmployeeDD.length; i++){%>
                                                <option value="<%=getEmployeeDD[i].id%>"><%=getEmployeeDD[i].name%></option>
                                            <%}}%>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="date" class="col-md-4 col-form-label">Date</label>
                                <div class="col-md-8" id="datepicker1">
                                    <div class="input-group" data-validate="Date is required">
                                        <input type="datetime-local" name="attendanceDate" id="attendanceDate" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="detailsInfoId" class="col-md-4 col-form-label">Attendance Type</label>
                                <div class="col-md-8">
                                    <div class="input-group" data-validate="Attendance Type is required">
                                        <select class="form-select validate_this select2" name="attendanceTypeId" id="attendanceTypeId">
                                            <option value="" disabled selected>Select</option>
                                            <% if(locals.getAttendanceTypeDD) {for(var i=0; i<getAttendanceTypeDD.length; i++){%>
                                                <option value="<%=getAttendanceTypeDD[i].id%>"><%=getAttendanceTypeDD[i].name%></option>
                                            <%}}%>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <%if(typeof viewMode=='undefined'){%>
                            <button style="float: right;" class="btn btn-primary" type="submit"><%= typeof supply=='undefined' ? 'Create' : 'Update' %></button>
                        <%}%>
                        <!-- <button class="btn btn-primary" type="button" id="faceScanBtn" style="display: none;">Face Scan</button> -->
                    </div>
                </form>
            </div>
        </div>
        <!-- end card -->
    </div> <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

<%- contentFor('BottomJs') %>