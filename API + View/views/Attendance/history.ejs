<script>
    const coloum=[
        {
            "data": "sl",
            "title": "#SL",
        },
        {
            "data": "dateTime",
            "title": "Date",
        },
        {
            "data": "userName",
            "title": "Employee",
            "render": function (data, type, row, meta) {
                return row.userName.toUpperCase()
            }
        },
        {
            "data": "dayIn",
            "title": "Clock In",
            "render": function (data, type, row, meta) {
                // return new Date(row['dayIn']).toISOString().split('T')[1].replace('.000Z','')
                return new Date(row['dayIn']).toLocaleTimeString("en-US", {timeZone: "Australia/Sydney"}, "hh:mm")
            }
        },
        {
            "data": "dayOut",
            "title": "Clock Out",
            "render": function (data, type, row, meta) {
                // return new Date(row['dayOut']).toISOString().split('T')[1].replace('.000Z','')
                return new Date(row['dayOut']).toLocaleTimeString("en-US", {timeZone: "Australia/Sydney"}, "hh:mm")
            }
        },
        {
            "data": "workingHours",
            "title": "Working Hour",
        },
        {
            "data": "totalBreak",
            "title": "Break"
        },
        {
            "data": "actualWorkingHours",
            "title": "Actual Working Hour",
        }
    ];
    
    function loadTableData(showAll=false){
        const fromDate=$("#fromDate").val();
        const toDate=$("#toDate").val();
        if(fromDate && toDate){
            $("#searchDiv").hide(500);
            get_table_data("datatable-buttons",`portal-attendance-history-data/${fromDate}&${toDate}`,coloum);
        }
        else if(showAll){
            $("#searchDiv").hide(500);
            get_table_data("datatable-buttons",`portal-attendance-history-data`,coloum);
            
        }
    }

    function attendanceUpdate(){
        $("#attendanceUpdateModal").modal("show");
    }
    
    $(".modal-submit-btn").click(function() {
         $('.validate-this-form').submit(); 
   });

</script>
