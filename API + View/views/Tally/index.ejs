<script>
    const coloum=[
        {
            "data": "sl",
            "title": "#SL",
        },
        {
            "data": "date",
            "title": "Date",
        },
        {
            "data": "sl",
            "title": "Customer Name",
            "render": function (data, type, row, meta) {
                return `${row['tallyCustomer.fullName']}`;
            }
        },
        {
            "data": "sl",
            "title": "Customer Contact",
            "render": function (data, type, row, meta) {
                return `${row['tallyCustomer.contactNo']}`;
            }
        },
        {
            "data": "itemName",
            "title": "Item"
        },
        {
            "data": "quantity",
            "title": "Quantity"
        },
        {
            "data": "totalPrice",
            "title": "Total"
        },
        {
            "data": "id",
            "title": "Action",
            mRender: function(data){
                return `<a class="btn btn-sm btn-success btn-soft-success waves-effect waves-light" href="/portal-tally-create/${data}">Update</a>
                <button class="btn btn-sm btn-danger btn-soft-danger waves-effect waves-light" onclick='deleteConfirmation("/portal-tally-delete/${data}")'>Delete</button>`
            }
        }
    ];

    function createInvoice(){
        const hiddenField=$("#hiddenField").val();
        if(hiddenField!=0){
            const fromDate=$("#fromDate").val();
            const toDate=$("#toDate").val();
            const tallyCustomerId=$("#tallyCustomerId").val();
            if(fromDate && toDate && tallyCustomerId){
                go_link_new_page(`portal-tally-invoice-create/${fromDate}&${toDate}&${tallyCustomerId}`);
            }
        }else{
            location.reload();
        }
    }

    function loadTableData(){
        const hiddenField=$("#hiddenField").val();
        if(hiddenField==0){
            const fromDate=$("#fromDate").val();
            const toDate=$("#toDate").val();
            const tallyCustomerId=$("#tallyCustomerId").val();
            if(fromDate && toDate && tallyCustomerId){
                $("input").attr('disabled',true);
                $("select").attr('disabled',true);
                $("#hiddenField").val(1);
                $("#searchBtn").html('<i class="uil uil-redo me-2"></i> Search Again');
                $("#invoiceBtn").show();
                get_table_data("datatable-buttons",`get-portal-tally-list-data/${fromDate}&${toDate}&${tallyCustomerId}`,coloum,[6],false);
            }
        }else{
            location.reload();
        }
    }
    
</script>

