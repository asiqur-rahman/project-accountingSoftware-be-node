<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row" style="margin-bottom: 10px;">
                    <input type="hidden" id="hiddenField" value="0" style="display: none;">
                    <div class="col-md-12">
                        <div class="mb-3 row">
                            <label for="tallyId" class="col-md-2 col-form-label">Tally Customer</label>
                            <div class="col-md-10">
                                <div class="input-group" data-validate="Role is required">
                                    <select class="form-select validate_this select2" name="tallyCustomerId" id="tallyCustomerId">
                                        <option value="" disabled selected>Select</option>
                                        <% if(locals.tallyCustomerDD) {for(var i=0; i<tallyCustomerDD.length; i++){%>
                                            <option value="<%=tallyCustomerDD[i].id%>" <%=typeof tally!='undefined' ? tallyCustomerDD[i].id==tally.roleId ? 'selected':'' : ''%>><%=tallyCustomerDD[i].name%></option>
                                        <%}}%>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="date" class="col-md-4 col-form-label">From Date</label>
                            <div class="col-md-8">
                                <div class="input-group" data-validate="From Date is required">
                                    <input class="form-control validate_this" type="date" id="fromDate">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="date" class="col-md-4 col-form-label">To Date</label>
                            <div class="col-md-8">
                                <div class="input-group" data-validate="To Date is required">
                                    <input class="form-control validate_this" type="date" id="toDate">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <button class="btn btn-info" style="float: right;  margin-left: 10px; display: none;" type="button" onclick="createInvoice()" id="invoiceBtn" ><i class="uil uil-file-minus-alt me-2"></i> Create Invoice</button>
                        <button class="btn btn-primary" style="float: right;" type="button" onclick="loadTableData()" id="searchBtn" ><i class="uil uil-search me-2"></i> Search</button>
                    </div>
                </div>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                    style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead></thead>
                    <tbody></tbody>
                    <tfoot id="tfoot" style="display: none;">
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th></th>
                        <th colspan="2"></th>
                    </tfoot>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->

