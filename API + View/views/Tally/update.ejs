<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Tally <%= typeof tally=='undefined' ? 'Create' : 'Update' %></h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Tally</a></li>
                    <li class="breadcrumb-item active"><%= typeof tally=='undefined' ? 'Create' : 'Update' %></li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form class="needs-validations" method="post">
                    <div class="row">
                        <input class="form-control" type="number" name="id" id="id" value="<%= typeof tally!='undefined' ? tally.id : '0' %>" readonly hidden>
                        
                        <div class="col-md-12">
                            <div class="mb-3 row">
                                <label for="tallyId" class="col-md-2 col-form-label">Tally Customer</label>
                                <div class="col-md-10">
                                    <div class="input-group" data-validate="Role is required">
                                        <select class="form-select validate_this select2" name="tallyCustomerId" id="tallyCustomerId">
                                            <option value="" disabled selected>Select</option>
                                            <% if(locals.tallyCustomerDD) {for(var i=0; i<tallyCustomerDD.length; i++){%>
                                                <option value="<%=tallyCustomerDD[i].id%>" <%=typeof tally!='undefined' ? tallyCustomerDD[i].id==tally.roleId ? 'selected':'' : ''%>><%=tallyCustomerDD[i].name%></option>
                                            <%}}%>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="date" class="col-md-4 col-form-label">Date</label>
                                <div class="col-md-8" id="datepicker1">
                                    <div class="input-group" id="datepicker2" data-validate="Date is required">
                                        <!-- <input class="form-control validate_this" placeholder="Date" type="date" name="date" id="date" value="<%= typeof sales!='undefined' ? sales.date : '' %>"> -->
                                        <input type="text" class="form-control validate_this" placeholder="Date"
                                            data-date-format="mm/dd/yyyy" data-date-container='#datepicker2' data-provide="datepicker"
                                            data-date-autoclose="true" autocomplete="off"
                                            name="date" id="date" value="<%= typeof tally!='undefined' ? tally.date : '' %>">
        
                                        <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="name" class="col-md-4 col-form-label">Item Name</label>
                                <div class="col-md-8">
                                    <input class="form-control" type="text" name="itemName" id="itemName" value="<%= typeof tally!='undefined' ? tally.itemName : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="contactNo" class="col-md-4 col-form-label">Quantity</label>
                                <div class="col-md-8">
                                    <input class="form-control" type="text" name="quantity" id="quantity" value="<%= typeof tally!='undefined' ? tally.quantity : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="email" class="col-md-4 col-form-label">Total</label>
                                <div class="col-md-8">
                                    <input class="form-control" type="text" name="totalPrice" id="totalPrice" value="<%= typeof tally!='undefined' ? tally.totalPrice : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3 row">
                                <label for="email" class="col-md-2 col-form-label">Description</label>
                                <div class="col-md-10">
                                    <input class="form-control" type="text" name="description" id="description" value="<%= typeof tally!='undefined' ? tally.description : '' %>">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <a class="btn btn-danger" style="float: right; margin-left: 2%;" type="button" href="/portal-user-list">Cancel</a>
                        <button class="btn btn-primary" style="float: right;" type="submit" id="formSubmitBtn" ><%= typeof tally=='undefined' ? 'Create' : 'Update' %></button>
                        <!-- <button class="btn btn-primary" type="button" id="faceScanBtn" style="display: none;">Face Scan</button> -->
                    </div>
                </form>
            </div>
        </div>
        <!-- end card -->
    </div> <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

<!-- parsleyjs -->
<script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>
<script src="/public/assets/js/pages/form-validation.init.js"></script>

<%- contentFor('BottomJs') %>

<script>
    $("#username").change(async function(){
        const username=$("#username").val();
        if(username.trim()!=''){
            await $.ajax({
                type: 'get',
                url: "/portal-username-check/" + username,
                beforeSend: function () {
                    // Spinner.Show();
                },
                complete: function () {
                    // Spinner.Hide();
                },
                success: function (jsondata) {
                    if(jsondata.status==1){
                        $("#username").val('');
                        Swal.fire({
                            icon: 'error',
                            title: 'Username already used !'
                        });
                    }
                },
                error: function (request, status, error) {
                    Spinner.Hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Duplicate username checking failed !'
                    })
                }
            });
        }
    })
</script>