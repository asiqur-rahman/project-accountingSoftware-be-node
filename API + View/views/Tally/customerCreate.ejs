<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Tally Customer <%= typeof tallyCustomer=='undefined' ? 'Create' : 'Update' %></h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">User</a></li>
                    <li class="breadcrumb-item active"><%= typeof tallyCustomer=='undefined' ? 'Create' : 'Update' %></li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form class="validate-this-form" method="post">
                    <div class="row">
                        <input class="form-control" type="number" name="id" id="id" value="<%= typeof tallyCustomer!='undefined' ? tallyCustomer.id : '0' %>" readonly hidden>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="name" class="col-md-4 col-form-label">Full Name</label>
                                <div class="col-md-8" data-validate="Name is required">
                                    <input class="form-control validate_this" type="text" name="fullName" id="fullName" value="<%= typeof tallyCustomer!='undefined' ? tallyCustomer.fullName : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="contactNo" class="col-md-4 col-form-label">Contact No</label>
                                <div class="col-md-8"  data-validate="Contact No is required">
                                    <input class="form-control validate_this" type="text" name="contactNo" id="contactNo" value="<%= typeof tallyCustomer!='undefined' ? tallyCustomer.contactNo : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="email" class="col-md-4 col-form-label">Email</label>
                                <div class="col-md-8">
                                    <input class="form-control" type="email" name="email" id="email" value="<%= typeof tallyCustomer!='undefined' ? tallyCustomer.email : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3 row">
                                <label for="address" class="col-md-4 col-form-label">Address</label>
                                <div class="col-md-8" data-validate="Address is required">
                                    <input class="form-control validate_this" type="text" name="address" id="address" value="<%= typeof tallyCustomer!='undefined' ? tallyCustomer.address : '' %>">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <a class="btn btn-danger" style="float: right; margin-left: 2%;" type="button" href="/portal-tally-customer-list">Cancel</a>
                        <button class="btn btn-primary" style="float: right;" type="submit" id="formSubmitBtn" ><%= typeof tallyCustomer=='undefined' ? 'Create' : 'Update' %></button>
                        <!-- <button class="btn btn-primary" type="button" id="faceScanBtn" style="display: none;">Face Scan</button> -->
                    </div>
                </form>
            </div>
        </div>
        <!-- end card -->
    </div> <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

<!-- parsleyjs -->
<script src="/public/assets/libs/parsleyjs/parsley.min.js"></script>
<script src="/public/assets/js/pages/form-validation.init.js"></script>

<%- contentFor('BottomJs') %>

<script>
    $("#username").change(async function(){
        const username=$("#username").val();
        if(username.trim()!=''){
            await $.ajax({
                type: 'get',
                url: "/portal-username-check/" + username,
                beforeSend: function () {
                    // Spinner.Show();
                },
                complete: function () {
                    // Spinner.Hide();
                },
                success: function (jsondata) {
                    if(jsondata.status==1){
                        $("#username").val('');
                        Swal.fire({
                            icon: 'error',
                            title: 'Username already used !'
                        });
                    }
                },
                error: function (request, status, error) {
                    Spinner.Hide();
                    Swal.fire({
                        icon: 'error',
                        title: 'Duplicate username checking failed !'
                    })
                }
            });
        }
    })
</script>