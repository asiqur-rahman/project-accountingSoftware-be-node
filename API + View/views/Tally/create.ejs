<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Tally <%= typeof tally=='undefined' ? 'Create' : 'Update' %></h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Tally</a></li>
                    <li class="breadcrumb-item active"><%= typeof tally=='undefined' ? 'Create' : 'Update' %></li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- <h4 class="card-title mb-4">Invoice Details</h4> enctype="multipart/form-data" --> 
                <form class="repeater validate-this-form" method="post">
                    <div data-repeater-list="group-a" class="row">
                        <div class="col-md-12">
                            <div class="mb-3 row">
                                <label for="tallyId" class="col-md-2 col-form-label">Tally Customer</label>
                                <div class="col-md-10">
                                    <div class="input-group" data-validate="Role is required">
                                        <select class="form-select validate_this select2" name="tallyCustomerId" id="tallyCustomerId">
                                            <option value="" disabled selected>Select</option>
                                            <% if(locals.tallyCustomerDD) {for(var i=0; i<tallyCustomerDD.length; i++){%>
                                                <option value="<%=tallyCustomerDD[i].id%>" <%=typeof tally!='undefined' ? tallyCustomerDD[i].id==tally.roleId ? 'selected':'' : ''%>><%=tallyCustomerDD[i].name%></option>
                                            <%}}%>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="mb-3 row">
                                <label for="date" class="col-md-2 col-form-label">Date</label>
                                <div class="col-md-10" id="datepicker1">
                                    <div class="input-group" id="datepicker2" data-validate="Date is required">
                                        <!-- <input class="form-control validate_this" placeholder="Date" type="date" name="date" id="date" value="<%= typeof sales!='undefined' ? sales.date : '' %>"> -->
                                        <input type="text" class="form-control validate_this" placeholder="Date"
                                            data-date-format="mm/dd/yyyy" data-date-container='#datepicker2' data-provide="datepicker"
                                            data-date-autoclose="true" autocomplete="off"
                                            name="date" id="date" value="<%= typeof sales!='undefined' ? sales.date : '' %>">
        
                                        <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div data-repeater-item class="row">
                            <div  class="mb-3 col-lg-3">
                                <label class="form-label" for="name">Item Name</label>
                                <input type="text" name="itemName" class="form-control"/>
                            </div>
                            <div  class="mb-3 col-lg-3">
                                <label class="form-label" for="email">Unit</label>
                                <input type="text" name="itemQuantity" class="form-control" onkeyup="numberOnly(this)" onchange="multiply(this.name)"/>
                            </div>
                            <div  class="mb-3 col-lg-3">
                                <label class="form-label" for="subject">Price</label>
                                <input type="text" name="itemPrice" class="form-control" onkeyup="numberOnly(this)" onchange="multiply(this.name)"/>
                            </div>
                            <div  class="mb-3 col-lg-2">
                                <label class="form-label" for="subject">Total</label>
                                <input type="text" name="itemTotal" class="form-control" readonly/>
                            </div>
                            
                            <div class="col-lg-1 align-self-center d-grid">
                                <input data-repeater-delete type="button" class="btn btn-warning btn-block" value="Delete"/>
                            </div>
                        </div>
                    </div>
                    <input data-repeater-create type="button" class="btn btn-success" value="Add New Item"/>
                    
                    <div class="mt-3 col-md-12">
                            <div class="mb-3 row">
                                <label for="description" class="col-md-2 col-form-label">Description</label>
                                <div class="col-md-10">
                                    <input class="form-control" placeholder="Description" type="text" name="description" id="description" value="<%= typeof sales!='undefined' ? sales.description : '' %>">
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 text-end">
                            <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

<!-- form repeater js -->
<script src="public/assets/libs/jquery.repeater/jquery.repeater.min.js"></script>

<script src="public/assets/js/pages/form-repeater.int.js"></script>

<%- contentFor('BottomJs') %>

<script>
    function multiply(name){
        const id = name.split("][")[0].split("group-a[")[1];
        const itemQuantity=$(`input[name="group-a[${id}][itemQuantity]"]`).val();
        const itemPrice=$(`input[name="group-a[${id}][itemPrice]"]`).val();
        const itemTotal=itemQuantity*itemPrice;
        $(`input[name="group-a[${id}][itemTotal]"]`).val(itemTotal.toFixed(2));
    };

    function numberOnly(e){
        if(e.value!='-')
        while(isNaN(e.value))
        e.value = e.value.split('').reverse().join('').replace(/[\D]/i,'')
                               .split('').reverse().join('');
    };
</script>