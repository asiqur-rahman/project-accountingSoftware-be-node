<%- contentFor('HeaderCss') %>

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Chart Of Account <%= typeof model=='undefined' ? 'Create' : 'Update' %></h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Sales</a></li>
                    <li class="breadcrumb-item active"><%= typeof model=='undefined' ? 'Create' : 'Update' %></li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <!-- <h4 class="card-title mb-4">Invoice Details</h4> enctype="multipart/form-data" --> 
                <form class="repeater validate-this-form row" method="post">
                    <input class="form-control" type="number" name="id" id="id" value="<%= typeof model!='undefined' ? model.id : '0' %>" readonly hidden>
                    
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="name" class="col-md-4 col-form-label">Name</label>
                            <div class="col-md-8" data-validate="Name is required">
                                <input class="form-control validate_this" placeholder="Ex. Assets" type="text" name="name" id="name" value="<%= typeof model!='undefined' ? model.name : '' %>">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="currencyId" class="col-md-4 col-form-label">Currency</label>
                            <div class="col-md-8">
                                <div class="input-group" data-validate="Currency is required">
                                    <select class="form-select validate_this select2" name="currencyId" id="currencyId">
                                        <option value="" disabled selected>Select an option</option>
                                        <% if(locals.currencyDD) {for(var i=0; i<currencyDD.length; i++){%>
                                            <option value="<%=currencyDD[i].id%>" <%=typeof detailsInfo!='undefined' ? currencyDD[i].id==detailsInfo.currencyId ? 'selected':'' : ''%>><%=currencyDD[i].name%></option>
                                        <%}}%>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="parentId" class="col-md-4 col-form-label">Parent Account</label>
                            <div class="col-md-8">
                                <div class="input-group" data-validate="Parent Account is required">
                                    <select class="form-select validate_this select2" name="parentId" id="parentId">
                                        <option value="" disabled selected>Select an option</option>
                                        <% if(locals.chartOfAccountDD) {for(var i=0; i<chartOfAccountDD.length; i++){%>
                                            <option value="<%=chartOfAccountDD[i].id%>" <%=typeof detailsInfo!='undefined' ? chartOfAccountDD[i].id==detailsInfo.parentId ? 'selected':'' : ''%>><%=chartOfAccountDD[i].name%></option>
                                        <%}}%>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 row">
                            <label for="decimalPlaces" class="col-md-4 col-form-label">Decimal Places</label>
                            <div class="col-md-8" data-validate="Decimal Places is required">
                                <input class="form-control validate_this number_only" placeholder="Ex. 2" type="text" name="decimalPlaces" id="decimalPlaces" value="<%= typeof model!='undefined' ? model.decimalPlaces : '' %>">
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 text-end">
                        <button class="btn btn-primary w-sm waves-effect waves-light" type="submit">Submit</button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

<%- contentFor('BottomJs') %>

<script>

    function numberOnly(e){
        if(e.value!='-')
        while(isNaN(e.value))
        e.value = e.value.split('').reverse().join('').replace(/[\D]/i,'')
                               .split('').reverse().join('');
    };
</script>