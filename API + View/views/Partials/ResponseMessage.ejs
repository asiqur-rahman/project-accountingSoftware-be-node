<link rel="stylesheet" type="text/css" href="public/assets/libs/toastr/build/toastr.min.css">
<input type="hidden" id="error_Msg" value="<%=typeof error_Msg!='undefined' && error_Msg.length> 0 ? error_Msg: ''%>">
<input type="hidden" id="info_Msg" value="<%=typeof info_Msg!='undefined' && info_Msg.length> 0 ? info_Msg: ''%>">
<input type="hidden" id="war_Msg" value="<%=typeof war_Msg!='undefined' && war_Msg.length> 0 ? war_Msg: ''%>">
<input type="hidden" id="succ_Msg" value="<%=typeof succ_Msg!='undefined' && succ_Msg.length> 0 ? succ_Msg: ''%>">
<!-- toastr plugin -->
<script src="public/assets/libs/toastr/build/toastr.min.js"></script>

<script>
    toastr.options = {
        "opacity": "1 !important",
        "closeButton": true,
        "debug": false,
        "newestOnTop": true,
        "progressBar": true,
        "positionClass": "toast-bottom-right",
        "preventDuplicates": true,
        "showDuration": 300,
        "hideDuration": 1000,
        "timeOut": 5000,
        "extendedTimeOut": 1000,
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };
    $(window).on('load', function () {
        const errorMsg=$("#error_Msg").val();
        const infoMsg=$("#info_Msg").val();
        const warMsg=$("#war_Msg").val();
        const succMsg=$("#succ_Msg").val();
        if(errorMsg){
            toastr["error"](errorMsg)
            // alert(errorMsg)
        }
        else if(infoMsg){
            toastr["info"](infoMsg)
            // alert(errorMsg)
        }
        else if(warMsg){
            toastr["warning"](warMsg)
            // alert(errorMsg)
        }
        else if(succMsg){
            toastr["success"](succMsg)
            // alert(errorMsg)
        }
    });
</script>