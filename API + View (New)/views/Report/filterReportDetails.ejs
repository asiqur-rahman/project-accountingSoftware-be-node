<div class="row">
  <div class="col-lg-12">
      <div class="card">
          <div class="card-body">
              <div class="table-responsive">
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap"
                style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                      <thead class="table-light">
                          <tr>
                              <th>#SL</th>
                              <th>Date</th>
                              <th>Account Name</th>
                              <th>Debit</th>
                              <th>Credit</th>
                          </tr>
                      </thead>
                      <tbody>
                          <% if(locals.data && data.length>0) {for(var i=0; i<data.length; i++){%>
                              <tr>
                                  <td><a href="javascript: void(0);" class="text-body fw-bold"><%=i+1%></a> </td>
                                  <td><%=data[i].dateTime%></td>
                                  <td><%=data[i].name%></td>
                                  <td><%=data[i].debit%> Tk.</td>
                                  <td><%=data[i].credit%> Tk.</td>
                              </tr>
                        <%}%>
                            <tr>
                                <td></td>
                                <td></td>
                                <td style="font-weight: bold;">Total</td>
                                <td style="font-weight: bold;"><%=locals.totalDebit%> Tk.</td>
                                <td style="font-weight: bold;"><%=locals.totalCredit%> Tk.</td>
                            </tr>
                        <%}else{%>
                            <tr>
                                <td colspan="5" style="text-align: center;">No transaction record found between those date !</td>
                            </tr>
                        <%}%>

                      </tbody>
                  </table>
              </div>
              <!-- end table-responsive -->
          </div>
      </div>
  </div>
</div>


