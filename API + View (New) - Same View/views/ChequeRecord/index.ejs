<script>
    $(document).ready(function () {
        const coloum=[
            {
                "data": "sl",
                "title": "#SL",
            },
            {
                "data": "sl",
                "title": "Bank Name",
                "render": function (data, type, row, meta) {
                    return `${row['bankAccount.name']}`;
                }
            },
            {
                "data": "number",
                "title": "Cheque Number",
            },
            {
                "data": "amount",
                "title": "Amount",
                "render": function (data, type, row, meta) {
                    return `${row['amount']} Tk.`;
                }
            },
            {
                "data": "dateTime",
                "title": "Date",
            },
            {
                "data": "id",
                "title": "Action",
                "render": function (data, type, row, meta) {
                        return `<a class="btn btn-sm btn-success btn-soft-success waves-effect waves-light" href="javascript: void(0);" onclick="loadPartial('/portal/cheque-record/${row['id']}')">Update</a> 
                        <button class="btn btn-sm btn-danger btn-soft-danger waves-effect waves-light" onclick='confirmationCheck_ajax("/portal/cheque-delete/${row['id']}","DELETE","Are you sure about the cheque deletion.","datatable-buttons",false)'>Delete</button>
                        `
                }
            }
        ]
        get_table_data("datatable-buttons","portal/cheque-record-list-data",coloum,[],true,true);
    });

    // <button class="btn btn-sm btn-danger btn-soft-danger waves-effect waves-light" onclick='deleteEmployeeFaces("/portal-user-delete/${data}",${data})'>Delete</button>
    
</script>
